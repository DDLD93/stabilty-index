generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum CycleStatus {
  OPEN
  CLOSED
  ARCHIVED
}

model Cycle {
  id              String      @id @default(cuid())
  status          CycleStatus @default(OPEN)
  monthYear       String
  surveyQuestions Json?

  submissions Submission[]
  snapshots   Snapshot[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([monthYear])
}

model Submission {
  id        String @id @default(cuid())
  cycleId   String
  cycle     Cycle  @relation(fields: [cycleId], references: [id], onDelete: Cascade)

  deviceHash String?

  stabilityScore Int?
  mood           String?
  oneWord        String?

  pillarResponses Json?

  spotlightState   String?
  spotlightTags    String[]
  spotlightComment String?

  isFlagged Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([cycleId, createdAt])
  @@index([cycleId, deviceHash])
  @@unique([cycleId, deviceHash])
  @@index([isFlagged])
}

model Snapshot {
  id        String @id @default(cuid())
  cycleId   String?
  cycle     Cycle? @relation(fields: [cycleId], references: [id], onDelete: SetNull)

  period           String
  overallScore     Float
  overallNarrative String

  pillarScores            Json
  stateSpotlightContent   Json
  institutionSpotlightContent Json?
  sourcesReferences       Json?
  publicSentimentSummary  Json

  publishedAt DateTime?
  isLocked    Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([publishedAt])
  @@index([period])
}

model AdminUser {
  id           String @id @default(cuid())
  email        String @unique
  passwordHash String

  auditLogs AuditLog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AuditLog {
  id          String    @id @default(cuid())
  adminUserId String?
  adminUser   AdminUser? @relation(fields: [adminUserId], references: [id], onDelete: SetNull)

  action   String
  metadata Json?

  createdAt DateTime @default(now())

  @@index([action, createdAt])
}

